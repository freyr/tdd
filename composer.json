{
    "name": "freyr/tdd",
    "description": "TDD Workshop",
    "type": "project",
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "TDD\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TDD\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "run-tests": "php vendor/bin/phpunit --testdox"
    },
    "minimum-stability": "stable",
    "license": "MIT"
}
